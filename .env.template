# Laravel Marketplace Template Environment Configuration
# Copy this file to .env and customize the values below for your specific marketplace
#
# LEGEND:
# [MANDATORY] - Required for the application to function
# [RECOMMENDED] - Strongly recommended for production use
# [OPTIONAL] - Nice to have, can be left as default

# ============================================
# BASIC APPLICATION SETTINGS [MANDATORY]
# ============================================
APP_NAME="Your Marketplace Name"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://your-marketplace.test

# ============================================
# DATABASE CONFIGURATION [MANDATORY]
# ============================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=marketplace
DB_USERNAME=postgres
DB_PASSWORD=

# ============================================
# MARKETPLACE BRANDING [RECOMMENDED]
# ============================================
MARKETPLACE_NAME="Your Custom Marketplace"
BRAND_PRIMARY_COLOR="#4F46E5"
BRAND_SECONDARY_COLOR="#059669"
BRAND_COMPANY_NAME="Your Company Name"
BRAND_TAGLINE="Your marketplace tagline"
BRAND_LOGO_PATH="/images/your-logo.png"
BRAND_FAVICON_PATH="/favicon.svg"

# ============================================
# FEATURE FLAGS [OPTIONAL]
# Enable/Disable marketplace features as needed
# ============================================
FEATURE_DIGITAL_PRODUCTS=true
FEATURE_PHYSICAL_PRODUCTS=true
FEATURE_SUBSCRIPTION_PRODUCTS=false
FEATURE_MULTI_VENDOR=true
FEATURE_REVIEWS_RATINGS=true
FEATURE_WISHLIST=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# ============================================
# PAYMENT CONFIGURATION [MANDATORY]
# ============================================
DEFAULT_PAYMENT_GATEWAY=magpie
SUPPORTED_CURRENCIES="PHP,USD,EUR"
DEFAULT_CURRENCY=PHP
MARKETPLACE_COMMISSION_RATE=5.0

# ============================================
# LOCALIZATION [RECOMMENDED]
# ============================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES="en,es,fr"
DEFAULT_TIMEZONE="Asia/Manila"
DATE_FORMAT="Y-m-d"
TIME_FORMAT="H:i:s"

# ============================================
# FILE UPLOAD SETTINGS [RECOMMENDED]
# Sizes in MB
# ============================================
MAX_FILE_SIZE=10
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,gif,webp"
ALLOWED_DOCUMENT_TYPES="pdf,doc,docx,txt"
MAX_IMAGES_PER_PRODUCT=10
MAX_FILES_PER_PRODUCT=5

# ============================================
# MAIL CONFIGURATION [MANDATORY]
# For production, configure with real SMTP settings
# ============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@your-marketplace.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# CACHE & SESSION [MANDATORY]
# ============================================
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# ============================================
# QUEUE CONFIGURATION [MANDATORY]
# ============================================
QUEUE_CONNECTION=database

# ============================================
# MAGPIE PAYMENT GATEWAY [MANDATORY]
# Get your API keys from https://magpie.im
# ============================================
MAGPIE_API_KEY=sk_live_your_api_key_here
MAGPIE_API_BASE_URL=https://api.magpie.im/v2
MAGPIE_CUSTOMERS_URL=https://api.magpie.im/v2/customers
MAGPIE_CHARGES_URL=https://api.magpie.im/v2/charges
MAGPIE_CHECKOUT_URL=https://api.pay.magpie.im/
MAGPIE_CHECKOUT_CALLBACK_SUCCESS_ENDPOINT=/payment/success
MAGPIE_CHECKOUT_CALLBACK_CANCEL_ENDPOINT=/payment/cancel
MAGPIE_SECRET_KEY=sk_live_your_api_key_here
MAGPIE_DEBUG=false

# ============================================
# SOCIAL MEDIA LINKS [OPTIONAL]
# ============================================
SOCIAL_FACEBOOK=""
SOCIAL_TWITTER=""
SOCIAL_INSTAGRAM=""
SOCIAL_LINKEDIN=""

# ============================================
# SEO SETTINGS [RECOMMENDED]
# ============================================
SEO_DEFAULT_TITLE="${APP_NAME}"
SEO_DEFAULT_DESCRIPTION="Your marketplace description for search engines"
SEO_DEFAULT_KEYWORDS="marketplace,ecommerce,online store"

# ============================================
# ANALYTICS [OPTIONAL]
# ============================================
GOOGLE_ANALYTICS_ID=""
FACEBOOK_PIXEL_ID=""

# ============================================
# FILE STORAGE [MANDATORY]
# ============================================
FILESYSTEM_DISK=public

# ============================================
# BROADCASTING [OPTIONAL]
# For real-time features like notifications
# ============================================
BROADCAST_CONNECTION=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ============================================
# REDIS [OPTIONAL]
# For advanced caching and session storage
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# LOGGING [MANDATORY]
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug